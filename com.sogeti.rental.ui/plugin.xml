<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="palette" name="palette" schema="schema/palette.exsd"/>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="com.sogeti.rental.ui">
      </category>
      <view
            name="Sample View"
            icon="icons/sample.gif"
            category="com.sogeti.rental.ui"
            class="com.sogeti.rental.ui.views.SampleView"
            id="com.sogeti.rental.ui.views.SampleView">
      </view>
      <view
            category="com.sogeti.rental.ui.category1"
            class="com.sogeti.rental.ui.views.RentalView"
            id="com.sogeti.rental.ui.viewRental"
            name="Rental Property"
            restorable="true">
      </view>
      <category
            id="com.sogeti.rental.ui.category1"
            name="Rental">
      </category>
      <view
            category="com.sogeti.rental.ui.category1"
            class="com.sogeti.rental.ui.views.AgencyView"
            id="com.sogeti.rental.ui.AgencyView"
            name="Rental Agency View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="com.sogeti.rental.ui.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.sogeti.rental.ui.perspective.RentalPerspective"
            icon="icons/sample.gif"
            id="com.sogeti.rental.ui.perspective.RentalPerspective"
            name="Rental">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.sogeti.rental.ui.RentalPreferencePage1"
            id="com.sogeti.rental.ui.page1"
            name="Rental">
      </page>
      <page
            category="com.sogeti.rental.ui.page1"
            class="com.sogeti.rental.ui.RentalColorPreferences"
            id="com.sogeti.rental.ui.page.palette"
            name="palette">
      </page>
      <page
            category="com.sogeti.rental.ui.page1"
            class="com.sogeti.rental.ui.RentalUIPreferenceColor"
            id="com.sogeti.rental.ui.page2"
            name="Color">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.sogeti.rental.ui.HelloWorld"
            commandId="com.sogeti.rental.ui.singleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="com.sogeti.rental.ui.cmd.category"
            description="Hello World"
            id="com.sogeti.rental.ui.singleCommand"
            name="Single Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=help">
         <menu
               icon="icons/Agency.png"
               label="Menu">
            <command
                  commandId="com.sogeti.rental.ui.singleCommand"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.views.ResourceNavigator">
         <command
               commandId="com.sogeti.rental.ui.singleCommand"
               icon="icons/Agency.png"
               label="Hello World"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:com.sogeti.rental.ui.AgencyView?after=additions">
         <command
               commandId="com.sogeti.rental.ui.singleCommand"
               icon="icons/Agency.png"
               label="Hello World"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="com.sogeti.rental.ui.toolbar1">
            <command
                  commandId="com.sogeti.rental.ui.singleCommand"
                  icon="icons/Agency.png"
                  label="Hello World"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="com.sogeti.rental.ui.palette">
      <palette
            class="com.sogeti.rental.ui.DefaultPalette"
            id="com.sogeti.rental.ui.palette.default"
            name="Default">
      </palette>
      <palette
            class="com.sogeti.rental.ui.MochePalette"
            id="com.sogeti.rental.ui.palette.moche"
            name="Moche">
      </palette>
   </extension>

</plugin>
